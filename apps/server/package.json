{
  "name": "@ccms/server",
  "description": "REST API server created using NestJS",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/check.js && node scripts/dev.js",
    "build": "tsup",
    "start": "node scripts/check.js && node dist/index.js",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "clean": "rm -rf node_modules & rm -rf dist",
    "mikro-orm": "mikro-orm"
  },
  "dependencies": {
    "@ccms/utils": "workspace:*",
    "@mikro-orm/cli": "4.5.10",
    "@mikro-orm/core": "4.5.10",
    "@mikro-orm/migrations": "4.5.10",
    "@mikro-orm/nestjs": "4.3.1",
    "@mikro-orm/postgresql": "4.5.10",
    "@nestjs/common": "8.2.6",
    "@nestjs/core": "8.2.6",
    "@nestjs/cqrs": "8.0.1",
    "@nestjs/passport": "8.1.0",
    "@nestjs/platform-express": "8.2.6",
    "@nestjs/swagger": "5.2.0",
    "argon2": "0.28.4",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "connect-redis": "6.1.0",
    "express": "4.17.2",
    "express-session": "1.17.2",
    "ioredis": "4.28.4",
    "passport": "0.5.2",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.2",
    "swagger-ui-express": "4.3.0",
    "ts-node": "10.4.0"
  },
  "devDependencies": {
    "@anatine/esbuild-decorators": "0.2.18",
    "@ccms/node": "workspace:*",
    "@golevelup/ts-jest": "0.3.2",
    "@nestjs/cli": "8.2.0",
    "@nestjs/schematics": "8.0.5",
    "@nestjs/testing": "8.2.6",
    "@types/connect-redis": "0.0.18",
    "@types/express": "4.17.13",
    "@types/express-session": "1.17.4",
    "@types/jest": "27.4.0",
    "@types/passport-local": "1.0.34",
    "esbuild": "0.14.18",
    "jest": "27.4.7",
    "nodemon": "2.0.15",
    "ts-jest": "27.1.3",
    "tsup": "5.11.13"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts"
    ]
  }
}
