generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AccountStatus {
  ACTIVE
  INACTIVE
}

model Account {
  id        String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String        @unique
  password  String
  status    AccountStatus @default(INACTIVE)
  createdAt DateTime      @default(now())
  updatedAt DateTime?     @updatedAt
}
