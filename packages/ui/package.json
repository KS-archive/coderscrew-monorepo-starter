{
  "name": "@ccms/ui",
  "version": "0.0.0",
  "description": "Our design system - styling functions, theming and reusable components",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "private": true,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "dev": "tsup --watch & tsc --declaration --declarationMap --emitDeclarationOnly --watch & tsc-alias --watch",
    "build": "rm -rf dist && tsup & tsc --declaration --declarationMap --emitDeclarationOnly && tsc-alias",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "clean": "rm -rf .turbo & rm -rf node_modules & rm -rf dist & rm -rf storybook-static",
    "storybook:dev": "start-storybook --port $STORYBOOK_PORT --no-open",
    "storybook:build": "build-storybook",
    "zeplin:connect": "zeplin connect",
    "zeplin:connect-dev": "zeplin connect --dev"
  },
  "dependencies": {
    "@ccms/typings": "workspace:*",
    "@ccms/utils": "workspace:*",
    "@emotion/react": "11.7.1",
    "@emotion/styled": "11.6.0",
    "react-hot-toast": "2.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.16.12",
    "@ccms/node": "workspace:*",
    "@storybook/addon-actions": "6.4.16",
    "@storybook/addon-essentials": "6.4.16",
    "@storybook/addon-links": "6.4.16",
    "@storybook/builder-webpack5": "6.4.16",
    "@storybook/manager-webpack5": "6.4.16",
    "@storybook/node-logger": "6.4.16",
    "@storybook/react": "6.4.16",
    "@testing-library/dom": "8.11.3",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@zeplin/cli": "1.1.13",
    "@zeplin/cli-connect-react-plugin": "1.1.1",
    "@zeplin/cli-connect-storybook-plugin": "0.5.4",
    "babel-loader": "8.2.3",
    "eslint-plugin-storybook": "0.5.6",
    "jest": "27.4.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "source-map-loader": "3.0.1",
    "ts-jest": "27.1.3",
    "tsc-alias": "1.5.0",
    "tsconfig-paths-webpack-plugin": "3.5.2",
    "tsup": "5.11.11",
    "webpack": "5.67.0"
  },
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
