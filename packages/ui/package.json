{
  "name": "@ccms/ui",
  "version": "0.0.0",
  "description": "Our design system - styling functions, theming and reusable components",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "private": true,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "dev": "tsup --watch & tsc --declaration --declarationMap --emitDeclarationOnly --watch",
    "build": "rm -rf dist && tsup & tsc --declaration --declarationMap --emitDeclarationOnly",
    "clean": "rm -rf .turbo & rm -rf node_modules & rm -rf dist & rm -rf storybook-static",
    "storybook:dev": "start-storybook -p 6006",
    "storybook:build": "build-storybook"
  },
  "dependencies": {
    "@ccms/typings": "*",
    "@ccms/utils": "*",
    "@emotion/react": "11.7.1",
    "@emotion/styled": "11.6.0"
  },
  "devDependencies": {
    "@babel/core": "7.16.7",
    "@storybook/addon-actions": "6.4.10",
    "@storybook/addon-essentials": "6.4.10",
    "@storybook/addon-links": "6.4.10",
    "@storybook/builder-webpack5": "6.4.10",
    "@storybook/manager-webpack5": "6.4.10",
    "@storybook/node-logger": "6.4.10",
    "@storybook/react": "6.4.10",
    "babel-loader": "8.2.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "source-map-loader": "3.0.1",
    "tsconfig-paths-webpack-plugin": "3.5.2",
    "tsup": "5.11.11",
    "webpack": "5.65.0"
  },
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
