{
  "name": "@ccms/node",
  "description": "Utility functions that can be used only in Node.js environment",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "private": true,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "clean": "rm -rf node_modules & rm -rf dist"
  },
  "dependencies": {
    "colorette": "2.0.16",
    "fast-glob": "3.2.11"
  },
  "devDependencies": {
    "tsup": "5.11.11"
  }
}
