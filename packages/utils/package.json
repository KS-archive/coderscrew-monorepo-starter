{
  "name": "@ccms/utils",
  "description": "Cross-platform utility functions",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "private": true,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "dev": "tsup --watch & tsc --declaration --declarationMap --emitDeclarationOnly --watch",
    "build": "rm -rf dist && tsup & tsc --declaration --declarationMap --emitDeclarationOnly",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "clean": "rm -rf node_modules & rm -rf dist"
  },
  "dependencies": {
    "@ccms/typings": "workspace:*",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@ccms/node": "workspace:*",
    "@types/jest": "27.4.0",
    "@types/lodash": "4.14.178",
    "jest": "27.4.7",
    "ts-jest": "27.1.3",
    "tsup": "5.11.11"
  }
}
