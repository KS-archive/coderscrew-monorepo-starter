{
  "name": "ccms",
  "version": "0.0.0",
  "author": "KonradSzwarc<konrad.szwarc.dev@gmail.com>",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "engines": {
    "pnpm": "6.26.1",
    "node": "16.13.2"
  },
  "volta": {
    "node": "16.13.2"
  },
  "scripts": {
    "startup": "node scripts/startup.js"
  },
  "devDependencies": {
    "@ccms/cli": "*",
    "@ccms/eslint-plugin": "*",
    "@rushstack/eslint-patch": "1.1.0",
    "@types/node": "17.0.9",
    "cross-env": "7.0.3",
    "eslint": "8.7.0",
    "prettier": "2.5.1",
    "turbo": "1.0.28",
    "typescript": "4.5.4"
  },
  "turbo": {
    "pipeline": {
      "dev": {
        "cache": false
      },
      "build": {
        "outputs": [
          "dist/**"
        ],
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
